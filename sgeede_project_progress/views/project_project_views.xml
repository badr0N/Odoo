<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sgeede_inherit_project_project" model="ir.ui.view">
        <field name="name">sgeede.project.project.view.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" 
                        type="button" 
                        disabled="1"
                        icon="fa-percent">
                    <field string="Completion Percentage" name="completion_percentage" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
